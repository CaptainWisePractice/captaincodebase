
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <!-- Bootstrap InputMask -->
@*<script src="custom-plugins/bootstrap-inputmask.min.js"></script>*@
<script src="~/App_Theme/custom-plugins/bootstrap-inputmask.min.js"></script>
<style type="text/css">
    #tbl tr:nth-child(even) {
        background-color: #f2f2f2 !important;
    }

    #tbl td, #tbl th {
        border: 1px solid #ddd !important;
    }

    #tbl th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #f2f2f2;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $("#mainHome").addClass("active open");
        $("#childCustomer").addClass("active");

    });
</script>
<style>
    .widget .form-container .control-group
{
    
    padding: 6px 20px; 
    border-top: 0px solid #ccc;
}
</style>
<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-graph"></i><a href="@Url.Action("Index", "Sale")">Sales</a>
            <span class="divider">&raquo;</span>
        </li>

        <li>
            Customer
            @*<a href="@Url.Action("Customer", "Customer")">Customer</a>*@
        </li>
    </ul>
    @*<h1 id="main-heading">
             <span>This page shows the Customer  </span>
        </h1>*@
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icol-wand"></i>Customer Setup</span>
            </div>
            <div class="widget-content form-container">
                <div>
                    @Html.Partial("_CustomerInformation")
                </div>
                
                <br />
                @Html.Partial("_layoutPageButton")
            </div>
        </div>
    </div>
    <div class="row-fluid" style="overflow-y:auto;max-height:500px;">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i>List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Basic/Customer.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}

