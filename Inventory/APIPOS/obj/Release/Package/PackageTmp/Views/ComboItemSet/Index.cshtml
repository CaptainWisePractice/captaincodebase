
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #tbl tr:nth-child(even) {
        background-color: #f2f2f2 !important;
    }

    #tbl td, #tbl th {
        border: 1px solid #ddd !important;
    }

    #tbl th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #f2f2f2;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#mainHome").addClass("active open");
        $("#childWareHouse").addClass("active");
    });
</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-accessibility"></i><a href="@Url.Action("Index", "Admin")">Administrator</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Combo Setup
            @*<a href="@Url.Action("WareHouse", "WareHouse")">Site</a>*@
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i> Combo Setup</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span2">
                            </div>
                            <div class="span6">
                                <label class="control-label" for="txtComboName">Combo Code <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="text" id="txtComboName" class="span12">
                                    <input type="hidden" id="hfComboSetId" value="0" />
                                </div>
                            </div>
                            <div class="span4">
                                @*<label class="control-label" for="ddlItemHead">Head Name</label>
                                    <div class="controls">
                                        <select id="ddlItemHead" class="span12"></select>
                                    </div>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span2">
                            </div>
                            <div class="span8">

                                <div class="controls" style="margin-left: 0px">
                                    <div id="divDetailTable" class="widget-content table-container" style="overflow: hidden;">
                                        <table class="table table-bordered" id="DetailTable">
                                            <thead style="background-color: #ebebeb">
                                                <tr>
                                                    <th width="10%">Action</th>
                                                    <th width="35%">Item Code<span style="color: red">*</span></th>
                                                    <th width="10%">Qty<span style="color: red">*</span></th>
                                                    <th width="10%">Unit Price</th>
                                                </tr>
                                            </thead>
                                            <tbody id="idtbody"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="span2">
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span8">
                                <label class="control-label" for="txtDescription">Description </label>
                                <div class="controls">
                                    <input type="text" id="txtDescription" class="span12">
                                </div>
                            </div>
                            <div class="span4">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkIsActive" value="option1" class="uniform" checked>
                                        IsActive
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <br />
                    @Html.Partial("_layoutPageButton")
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i>Combo Item List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Admin/ComboSet.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}

