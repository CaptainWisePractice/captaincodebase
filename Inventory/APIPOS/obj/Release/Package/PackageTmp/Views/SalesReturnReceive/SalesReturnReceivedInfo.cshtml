
@{
    ViewBag.Title = "SalesReturnReceivedInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .txtAmount {
        text-align: right;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $("#mainSales").addClass("active open");
        $("#childSales").addClass("active");
        $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");
    });
</script>
<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-graph"></i><a href="@Url.Action("Index", "Sale")">Sales</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Return Receive
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icol-arrow-in"></i>Return Receive</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span3">
                                <label class="control-label">Return Receive No :</label>
                                <div class="controls">
                                    <input type="text" class="span12 date" id="txtReceiveNo" readonly />
                                    <input type="hidden" class="span12" id="hfSaleId" />
                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label">Sale Invoice :</label>
                                <div class="controls">
                                    <input type="text" class="span12" id="txtInvoice" readonly />
                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label">Total Value :</label>
                                <div class="controls">
                                    <input type="text" class="span12" id="txtTotalValue" readonly />
                                    <input type="hidden" class="span12" id="hfTotalInvoiceAmount" />
                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label">Total Qty :</label>
                                <div class="controls">
                                    <input type="text" class="span12" id="txtInvoiceQty" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span3">
                                <label class="control-label">Receive Date :</label>
                                <div class="controls">
                                    <input type="text" class="span12" id="txtReceiveDate" />
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label">Customer Name :</label>
                                <div class="controls">
                                    <input type="text" class="span12" id="txtCustomerName" readonly />
                                    <input type="hidden" class="span12" id="hfCustomerId" />

                                </div>

                            </div>
                            <div class="span5">
                                <label class="control-label">Reason :</label>
                                <div class="controls">
                                    <input type="text" class="span12" id="txtReason" />
                                </div>
                            </div>

                        </div>
                        <div class="control-group">
                            <div class="span7">
                                <label class="control-label" for="txtNotes">Notes </label>
                                <div class="controls">
                                    <textarea id="txtNotes" class="span10 autosize" style="overflow: hidden; word-wrap: break-word; resize: none; height: 50px;"></textarea>
                                </div>
                            </div>
                            <div class="span5">
                                <label class="control-label">Refund Method :</label>
                                <div class="controls">
                                    <select id="ddlPaymentMethod" class="span12"></select>
                                </div>
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="span1">
                            </div>
                            <div class="span3">
                                <label class="radio">
                                    No Item Return
                                    <input type="radio" id="r5" value="NoItemReturn">
                                </label>
                            </div>
                            <div id="divIdDeduction">
                                <div class="span2">
                                    <label class="checkbox" id="lblcheck" style="width: 92%;">
                                        <input type="checkbox" id="chkStoreCredit" value="StoreCredit" class="uniform">
                                        Store Credit
                                    </label>
                                </div>

                                <div class="span4">
                                    <label class="control-label">Deduction Amount :</label>
                                    <div class="controls">
                                        <input type="number" class="span12 numeric" id="txtDedAmount" />
                                    </div>
                                </div>
                                <div class="span2">
                                   
                                </div>
                            </div>
                        </div>
                       
                        <div class="control-group">
                            <div class="span1">
                            </div>
                            <div class="span2">
                                <label class="radio">
                                    Full Refund
                                    <input type="radio" id="r1" value="FullRefund" checked>
                                </label>
                            </div>
                            <div class="span2">
                                <label class="radio">
                                    Partial
                                    <input type="radio" id="r2" value="Partial">
                                </label>
                            </div>
                            <div class="span2">
                                <label class="radio">
                                    Restocking fee
                                    <input type="radio" id="r3" value="Restocking">
                                </label>
                            </div>
                            <div class="span2">
                                <label class="radio">
                                    Store Credit
                                    <input type="radio" id="r4" value="StoreCredit">
                                </label>
                            </div>
                            <div class="span3">
                                <label class="control-label">Paid Amount :</label>
                                <div class="controls">
                                    <input type="text" class="span12" id="txtPaymentAmount" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="control-group" style="background-color:#ffaec9;" id="divtabledata">
                            <div class="span12" style="min-height:150px;">
                                <table class="table table-bordered table-responsive" id="tblReceive">
                                    <thead style="background-color:#a0a9e4">
                                        <tr>
                                            <th width="15%" style="text-align:center;">Item Code</th>
                                            <th width="15%" style="text-align:center;">Item Number</th>
                                            <th width="12%" style="text-align:center;">Deduction Amount</th>
                                            <th width="10%" style="text-align:center;">Sale Quantity</th>
                                            <th width="15%" style="text-align:center;">Req. Receive Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                    </fieldset>
                    <br />
                    <div class="form-actions" style="padding-left: 0px; text-align: center;">
                        <input type="button" class="btn btn-primary" value="Save" id="btnSave" style="width:85px;" />
                        <input type="button" class="btn btn-inverse" value="Back" id="btnBack" style="width:85px;" />
                        <input type="button" class="btn btn-inverse" value="Back" id="btnBack1" style="width:85px;" />
                        <input type="button" class="btn btn-primary" value="Print" id="btnPrint" style="width:85px;" />
                        @*<input type="button" class="btn btn-danger" value="Cancel" id="btnCancel" style="width:85px;" />*@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">

        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/SaleReturn/SalesReturnReceivedInfo.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });

    </script>
}
