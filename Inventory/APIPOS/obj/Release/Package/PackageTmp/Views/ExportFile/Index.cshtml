



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <!-- for Html table to execl file-->
<script src="~/Scripts/Xlsx/xlsx.full.min.js"></script>
<script src="~/Scripts/Xlsx/FileSaver.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#mainSales").addClass("active open");
        $("#childSaleRelatedRepots").addClass("active");
        $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");
    });

</script>
<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-list"></i><a href="@Url.Action("Reports", "Index")">Export Section</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Sale Reports
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i> Export Data</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span3">
                                <label class="control-label"></label>
                                <div class="controls">

                                </div>
                            </div>
                            <div class="span6">
                                <label class="control-label" for="ddlExportFileName">Export File Name <span class="required">*</span></label>
                                <div class="controls">
                                    <select id="ddlExportFileName" class="span12">
                                        <option value="-1">---- Select ----</option>
                                        <option value="SaleExport">Sale Export</option>
                                        <option value="CustomerExport">Customer File</option>
                                    </select>
                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label"></label>
                                <div class="controls">
                                   
                                </div>
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="span2">

                            </div>
                            <div class="span4" id="divFromDate">
                                <label class="control-label" for="txtFromDate">From Date </label>
                                <div class="controls">
                                    <input type="text" id="txtFromDate" class="span12" />
                                </div>
                            </div>
                            <div class="span4" id="divToDate">
                                <label class="control-label" for="txtToDate">To Date </label>
                                <div class="controls">
                                    <input type="text" id="txtToDate" class="span12" />
                                </div>
                            </div>
                            <div class="span2">

                            </div>
                        </div>

                    </fieldset>
                    <br />
                    <div class="form-actions" style="padding-left: 32%;">
                        <input type="button" class="btn btn-primary" value="Export" id="btnExport" style="width:100px;" />
                        <input type="button" class="btn btn-info" value="Refresh" id="btnRefresh" style="width:100px;" />
                        <input type="button" class="btn btn-danger" value="Cancel" id="btnCancel" style="width:85px;" />
                    </div>
                    

                </form>
            </div>
        </div>
    </div>

</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Admin/ExportFile.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}




