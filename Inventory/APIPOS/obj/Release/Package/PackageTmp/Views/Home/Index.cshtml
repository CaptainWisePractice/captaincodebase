                <button class="close btnCloseLayby" type="button" data-dismiss="modal">&times;</button>
                Layby Overdue
            </div>
            <div class="modal-body" style="padding: 5px !important;">
                <form class="form-horizontal" style="margin: 0px !important;">
                    <fieldset>
                        <p style="font-weight:bold; margin-left:10px;">Sales Outlet : <span id="spnOutletLayby"></span></p>
                        <label style="text-align:center;color:red; background-color:#d9d5ee;">
                            <marquee width="80%" direction="left" height="15px">
                                Collect Payment and complete Invoice ASAP
                            </marquee>
                        </label>
                        <div class="control-group">
                            <div class="controls" style="margin-left: 0px">
                                <div id="divLaybyNotify" class="widget-content table-container" style="overflow:auto; max-height:300px;">
                                    <table class="table table-bordered" id="tblLaybyNotify">
                                        <thead style="background-color: #f6f699">
                                            <tr>
                                                <th></th>
                                                <th>Name</th>
                                                <th>Invoice No</th>
                                                <th>Due Date</th>
                                                <th>Balance Due</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="idLaybytbody"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary btnCloseLayby" data-dismiss="modal">Close</a>
            </div>
        </div>

    </div>

</div>

