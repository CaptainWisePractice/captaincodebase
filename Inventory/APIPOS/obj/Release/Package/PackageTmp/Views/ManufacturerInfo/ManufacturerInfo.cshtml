
@{
    ViewBag.Title = "ManufacturerInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #tbl tr:nth-child(even) {
        background-color: #f2f2f2 !important;
    }

    #tbl td, #tbl th {
        border: 1px solid #ddd !important;
    }

    #tbl th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #f2f2f2;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#mainHome").addClass("active open");
        $("#childManufacturerInfo").addClass("active");
    });
</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-accessibility"></i><a href="@Url.Action("Index", "Admin")">Administrator</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Manufacturer
            @*<a href="@Url.Action("ManufacturerInfo", "ManufacturerInfo")"></a>*@
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i>Manufacturer Setup</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span6">
                                <label class="control-label" for="txtName">Name <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="text" id="txtName" class="required span12">
                                    <input type="hidden" id="hfId" value="" />
                                </div>
                            </div>
                            <div class="span6">
                                <label class="control-label" for="txtContNo">Contact No <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="text" id="txtContNo" class="required span12">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span4">
                                <label class="control-label" for="txtMail">E-Mail </label>
                                <div class="controls">
                                    <input type="text" id="txtMail" class="span12">
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label" for="ddlCountry">Country </label>
                                <div class="controls">
                                    <select id="ddlCountry" class="span12 select2"></select>
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label" for="ddlTradingTerms">Trading Terms </label>
                                <div class="controls">
                                    <select id="ddlTradingTerms" class="span10 select2"></select>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span4">
                                <label class="control-label" for="txtDescription">Contact Person </label>
                                <div class="controls">
                                    <input type="text" id="txtDescription" class="span12">
                                    @*<textarea id="txtDescription" class="span10 autosize" style="overflow: hidden; word-wrap: break-word; resize: none; height: 80px;"></textarea>*@
                                </div>
                            </div>
                            <div class="span8">
                                <label class="control-label" for="txtNotes">Notes </label>
                                <div class="controls">
                                    <textarea id="txtNotes" class="span10 autosize" style="overflow: hidden; word-wrap: break-word; resize: none; height: 50px;"></textarea>
                                </div>
                            </div>
                        </div>
                        @*<div class="control-group" style="">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkIsActive" value="option1" class="uniform" checked>
                                        IsActive
                                    </label>
                                </div>
                            </div>*@
                    </fieldset>
                    <br />
                    @Html.Partial("_layoutPageButton")
                  
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i>List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Basic/ManufacturerInfo.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}
