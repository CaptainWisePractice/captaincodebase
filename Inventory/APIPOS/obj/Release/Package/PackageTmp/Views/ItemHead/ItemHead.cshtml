
@{
    ViewBag.Title = "ItemHead";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #tbl tr:nth-child(even) {
        background-color: #f2f2f2 !important;
    }

    #tbl td, #tbl th {
        border: 1px solid #ddd !important;
    }

    #tbl th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #f2f2f2;
    }
</style>
<script src="~/App_Theme/custom-plugins/bootstrap-inputmask.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#mainHome").addClass("active open");
        $("#childItemHead").addClass("active");

    });

</script>
<style>
    .widget .form-container .control-group {
        padding: 6px 20px;
        border-top: 0px solid #ccc;
    }
</style>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-accessibility"></i><a href="@Url.Action("Index", "Admin")">Administrator</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Item Code
            @*<a href="@Url.Action("ItemHead", "ItemHead")">Item Code</a>*@
        </li>
    </ul>
    @*<h1 id="main-heading">
            Item Head <span>This page shows the Item Head  </span>
        </h1>*@
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i>Item Code Setup</span>
            </div>
            <div class="widget-content form-container">
                <form id="wizard-demo-2" class="form-horizontal" data-forward-only="false">
                    <fieldset class="wizard-step">
                        <legend class="wizard-label"><i class="icon-book"></i> General</legend>
                        <div class="control-group">
                            <label class="control-label" for="ddlcategory">Category <span class="required">★</span></label>
                            <div class="controls">
                                <select id="ddlcategory" class="span10 select2-select-00"></select>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span4">
                                <label class="control-label">Item Code <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="text" id="txtCode" name="wizard[Code]" maxlength="12" class="required span12">
                                    <input type="hidden" id="hfId" value="" />
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label">CBM <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="text" id="txtCBM" class="required span12">
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label">Manufacturer</label>
                                <div class="controls">
                                    <select id="ddlManufacturer" class="span12 select2-select-00"></select>
                                </div>
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="span3">
                                <label class="control-label" for="txtCostPrice">Cost Price</label>
                                <div class="controls">
                                    <div class="input-append input-prepend">
                                        <span class="add-on">$</span><input type="text" id="txtCostPrice" class="span12">
                                    </div>

                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label" style="text-align: center;" for="txtNewPrice">New Price </label>
                                <div class="controls">
                                    <div class="input-append input-prepend">
                                        <span class="add-on">$</span><input type="text" id="txtNewPrice" class="span12">
                                    </div>
                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label" style="text-align: center;" for="txtColor">Colour </label>
                                <div class="controls">
                                    <input type="text" id="txtColor" class="span12">
                                    <input type="hidden" id="hfColorId" value="" />
                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label" style="text-align: center;" for="txtSize">Size </label>
                                <div class="controls">
                                    <input type="text" id="txtSize" class="required span12">
                                    <input type="hidden" id="hfSizeId" value="" />
                                </div>
                            </div>

                        </div>

                        <div class="control-group">
                            <label class="control-label" for="txtHead">Description </label>
                            <div class="controls">
                                <input type="text" id="txtHead" class="span10">
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox" id="lblcheck">
                                        <input type="checkbox" id="chkIsActive" value="option1" class="uniform" checked>
                                        Continue
                                    </label>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox" id="lblcheck" style="width: 92%;">
                                        <input type="checkbox" id="chkIsStock" value="option1" class="uniform" checked>
                                        Show Stock
                                    </label>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox" id="lblcheck" style="width: 92%;">
                                        <input type="checkbox" id="chkListingStatus" value="ListingStatus" class="uniform">
                                        Listing Status
                                    </label>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox" id="lblcheck" style="width: 92%;">
                                        <input type="checkbox" id="chkDeliveryStatus" value="DeliveryStatus" class="uniform">
                                        Pre-Sale
                                    </label>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                    <fieldset class="wizard-step">
                        <legend class="wizard-label"><i class="icon-attachment"></i> Attachments</legend>
                        <div class="control-group">
                            <label for="file" class="control-label">Choose file to upload</label>
                            <div class="controls">
                                <input type="file" id="file" name="file" onchange="fileSelected();" class="success">
                            </div>
                        </div>
                        <div class="control-group">
                            <div id="divImgPreview" class="controls">

                            </div>
                        </div>
                    </fieldset>
                </form>
                <br />
                @Html.Partial("_layoutPageButton")

            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i>List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Basic/ItemHead.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}
