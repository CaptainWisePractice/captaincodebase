
@{
    ViewBag.Title = "BasicReports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.2.61/jspdf.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#mainReports").addClass("active open");
        $("#childBasicReports").addClass("active");
        $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");
    });

</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>Inventory
            <span class="divider">&raquo;</span>
        </li>
        <li>
            <a href="#">Reports</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            <a href="@Url.Action("BasicReports", "BasicReports")">Basic Reports</a>
        </li>
    </ul>
   
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i> Show Report</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="ddlReportName">Report Name <span class="required">*</span></label>
                            <div class="controls">
                                <select id="ddlReportName" class="span12"></select>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                @*<input type="button" id="btnExport" value="Export" onclick="ExportPdf()" />*@
                            </div>
                        </div>
                    </fieldset>
                    <br />
                    @Html.Partial("_ReportPageButton")
                </form>
            </div>
        </div>
    </div>
    <div id="divTable">
        <table id="tbl">

        </table>
    </div>
   
    @*<div class="row-fluid">
            <div class="span12 widget">
                <div class="widget-header">
                    <span class="title">
                        <i class="icol-table"></i>List
                    </span>
                </div>
                <div id="divTable" class="widget-content table-container">
                </div>
            </div>
        </div>*@
</div>
