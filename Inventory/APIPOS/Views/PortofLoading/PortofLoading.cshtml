
@{
    ViewBag.Title = "PortofLoading";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #tbl tr:nth-child(even) {
        background-color: #f2f2f2 !important;
    }

    #tbl td, #tbl th {
        border: 1px solid #ddd !important;
    }

    #tbl th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #f2f2f2;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $("#mainPurchase").addClass("active open");
        $("#childPortofLoading").addClass("active");
        $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");

    });

</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-accessibility"></i><a href="@Url.Action("Index", "Admin")">Administrator</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Port Of Loading
            @*<a href="@Url.Action("Index", "Purchase")">Port Of Loading</a>*@
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i> Port Of Loading</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span2">
                            </div>
                            <div class="span8">
                                <label class="control-label" for="ddlCountry"> Country </label>
                                <div class="controls">
                                    <select id="ddlCountry" class="span12 select2-select-00"></select>
                                </div>
                            </div>
                            <div class="span2">
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span2">
                            </div>
                            <div class="span8">

                                <label class="control-label" for="txtName">Port Of Loading <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="text" id="txtName" class="span12">
                                    <input type="hidden" id="Id" value="0" />
                                </div>
                            </div>
                            <div class="span2">
                            </div>
                        </div>
                       
                    </fieldset>
                    <br />
                    @Html.Partial("_layoutPageButton")
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i>List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Purchase/PortofLoading.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}

