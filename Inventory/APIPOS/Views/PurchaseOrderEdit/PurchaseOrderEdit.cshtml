        background-color: #f2f2f2 !important;
    }

    #demo-dtable-04 th {
        padding-top: 6px;
        padding-bottom: 6px;
        text-align: left;
        background-color: #2da3bf !important;
        color: black;
    }

     .table-bordered tr td {
        padding: 3px !important;
    }
