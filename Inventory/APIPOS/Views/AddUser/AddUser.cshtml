
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #tbl tr:nth-child(even) {
        background-color: #f2f2f2 !important;
    }

    #tbl td, #tbl th {
        border: 1px solid #ddd !important;
    }

    #tbl th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #f2f2f2;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#mainHome").addClass("active open");
        $("#childAddUser").addClass("active");
       // $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");
    });
</script>

	<!-- Validation -->
<script src="~/App_Theme/plugins/validate/jquery.validate.min.js"></script>

<!-- Demo Scripts -->
<script src="~/App_Theme/assets/js/demo/form_validation.js"></script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-accessibility"></i><a href="@Url.Action("Index", "Admin")">Admin</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Add User
            @*<a href="@Url.Action("Index", "Admin")">Add User</a>*@
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i>Add User</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal" id="validate-1">
                    @*<fieldset>*@
                        <div class="control-group">
                            <div class="span5">
                                <label class="control-label" for="ddlUserType">User Type <span class="required">★</span></label>
                                <div class="controls">
                                    <select id="ddlUserType" class="span10" select2>
                                        <option value="-1">Select----</option>
                                        <option value="1">Admin</option>
                                        <option value="2">Users</option>
                                    </select>
                                </div>
                              </div>
                                <div class="span5">
                                    <label class="control-label" for="ddlWarehouse">Outlet Name <span class="required"></span></label>
                                    <div class="controls">
                                        <select id="ddlWarehouse" class="span10"></select>
                                    </div>
                                </div>
                            <div class="span2">
                            </div>
                            </div>
                        <div class="control-group">
                            <div class="span3">
                            </div>
                            <div class="span6">
                            <label class="control-label" for="txtFullName">Full Name</label>
                            <div class="controls">
                                <input type="text" id="txtFullName" class="span10">
                                <input type="hidden" id="Id" value="0" />
                            </div>
                            </div>
                            <div class="span3">
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span3">
                            </div>
                            <div class="span6">
                                <label class="control-label" for="txtUserName">User Name <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="text" id="txtUserName" name="req1" class="span10">
                                </div>
                            </div>
                            <div class="span3">
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="span3">
                            </div>
                            <div class="span6">
                                <label class="control-label" for="txtPasssword">Passsword <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="password" id="txtPasssword" name="pass1" class="span10">
                                </div>
                            </div>
                            <div class="span3">
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="span3">
                            </div>
                            <div class="span6">
                                <label class="control-label" for="txtConPassword">Confirm Password <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="password" id="txtConPassword" name="cpass1" class="span10">
                                </div>
                            </div>
                            <div class="span3">
                            </div>
                        </div>
                    <div class="control-group">
                        <div class="span3">
                            <div class="controls">
                                <label class="checkbox" id="lblcheck">
                                    <input type="checkbox" id="chkIsActive" value="option1" class="uniform" checked>
                                    IsActive
                                </label>
                            </div>
                        </div>
                        <div class="span6">
                            <label class="control-label" for="txtEmail">Email</label>
                            <div class="controls">
                                <input type="text" id="txtEmail" name="email1" class="span10">
                            </div>
                        </div>
                        <div class="span3">
                           
                        </div>
                        
                    </div>
                      
                    @*</fieldset>*@
                    <br />
                    @Html.Partial("_layoutPageButton")
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i>List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Admin/AddUser.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}
