@{
    ViewBag.Title = "WareHouse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #tbl tr:nth-child(even) {
        background-color: #f2f2f2 !important;
    }

    #tbl td, #tbl th {
        border: 1px solid #ddd !important;
    }

    #tbl th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #f2f2f2;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#mainHome").addClass("active open");
        $("#childWareHouse").addClass("active");
    });
</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-accessibility"></i><a href="@Url.Action("Index", "Admin")">Administrator</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Site
            @*<a href="@Url.Action("WareHouse", "WareHouse")">Site</a>*@
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i> Site Setup</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span6">
                                <label class="control-label" for="txtName">Name <span class="required">★</span></label>
                                <div class="controls">
                                    <input type="text" id="txtName" class="span12">
                                    <input type="hidden" id="WarehouseId" value="0" />
                                </div>
                            </div>
                            <div class="span6">
                                <label class="control-label" for="txtDescription">Description </label>
                                <div class="controls">
                                    <input type="text" id="txtDescription" class="span12">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span4">
                                <label class="control-label" for="txtContactNo">Contact No </label>
                                <div class="controls">
                                    <input type="text" id="txtContactNo" class="span12">
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label" for="txtCity">Suburb </label>
                                <div class="controls">
                                    <input type="text" id="txtCity" class="span12">
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label" for="txtPostCode">Post Code </label>
                                <div class="controls">
                                    <input type="text" id="txtPostCode" class="span12">
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span6">
                                <label class="control-label" for="txtAddress">Address </label>
                                <div class="controls">
                                    <textarea id="txtAddress" class="span10 autosize" style="overflow: hidden; word-wrap: break-word; resize: both; height: 80px;"></textarea>
                                </div>
                            </div>
                            <div class="span6">
                                <label class="control-label" for="txtNotes">Notes </label>
                                <div class="controls">
                                    <textarea id="txtNotes" class="span10 autosize" style="overflow: hidden; word-wrap: break-word; resize: both; height: 80px;"></textarea>
                                </div>
                            </div>
                        </div>
                        @*<div class="control-group">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkIsActive" value="option1" class="uniform" checked>
                                       IsActive
                                    </label>
                                </div>
                            </div>*@
                    </fieldset>
                    <br />
                    @Html.Partial("_layoutPageButton")
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i>List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Basic/Warehouse.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}