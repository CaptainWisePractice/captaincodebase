
@{
    ViewBag.Title = "SellingPriceSetup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/PapaParse/papaparse.js"></script>
<script src="~/Scripts/PapaParse/papaparse.min.js"></script>

<style type="text/css">

 /* Modal Css*/

  /* The Modal (background) */
    .modal {
        display: none;
        position: fixed;
        z-index: 10000;
        padding-top: 0px;
        left: 0;
        top: 0;
        width: 100% !important;
        height: 100% !important;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
        margin: 0px !important;
    }

    /* Modal Content */
    .modal-content {
        position: relative;
        margin: auto;
        padding: 0;
        width: 83%;
        -webkit-animation-name: animatetop;
        -webkit-animation-duration: 0.4s;
        animation-name: animatetop;
        animation-duration: 0.4s;
        top: 10%;
    }

    /* Add Animation */


    /* The Close Button */
    .close {
        color: white;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

    .modal-header {
        padding: 2px 16px;
        background-color: #5cb85c;
        color: white;
    }

    .modal-body {
        padding: 2px 16px;
        min-height: 530px !important;
        overflow: hidden;
    }

    .modal-footer {
        padding: 2px 16px;
        background-color: #5cb85c;
        color: white;
    }
</style>
<!-- Uniform Stylesheet -->
<link rel="stylesheet" href="~/App_Theme/plugins/uniform/css/uniform.default.css" media="screen">

<script type="text/javascript">
    $(document).ready(function () {
        $("#mainHome").addClass("active open");
        $("#childSellingPriceSetup").addClass("active");
      //  $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");
    });
</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-accessibility"></i><a href="@Url.Action("Index", "Admin")">Administrator</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Selling Price Setup
            @*<a href="@Url.Action("Index", "Admin")">Add User</a>*@
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i>Selling Price Setup</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span2">
                                <input type="hidden" id="hfId" value="0" />
                            </div>
                            <div class="span7">
                                <label class="control-label" for="ddlHead">Item Code <span class="required">★</span></label>
                                <div class="controls">
                                    <select id="ddlHead" class="span12 select2"></select>
                                </div>
                            </div>
                            <div class="span3">
                               
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="span4">
                                <label class="control-label" for="txtWholesale1">Offer 1 (Ex)</label>
                                <div class="controls">
                                    <div class="input-append input-prepend">
                                        <span class="add-on">$</span><input type="text" id="txtWholesale1" class="span12 number">
                                    </div>

                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label" style="text-align: center;" for="txtWholesale2">Offer 2 (Inc) </label>
                                <div class="controls">
                                    <div class="input-append input-prepend">
                                        <span class="add-on">$</span><input type="text" id="txtWholesale2" class="span12 number">
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label" style="text-align: center;" for="txtWholesale3">Offer 3 (Inc) </label>
                                <div class="controls">
                                    <div class="input-append input-prepend">
                                        <span class="add-on">$</span><input type="text" id="txtWholesale3" class="span12 number">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span4">
                                <label class="control-label" style="text-align: center;" for="txtWholesale">Whole Sale (Ex) </label>
                                <div class="controls">
                                    <div class="input-append input-prepend">
                                        <span class="add-on">$</span><input type="text" id="txtWholesale" class="span12 number">
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label" style="text-align: center;" for="txtRetail">Retail (Inc) </label>
                                <div class="controls">
                                    <div class="input-append input-prepend">
                                        <span class="add-on">$</span><input type="text" id="txtRetail" class="span12 number">
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <label class="control-label" style="text-align: center;" for="txtSpecial">Special (Inc) </label>
                                <div class="controls">
                                    <div class="input-append input-prepend">
                                        <span class="add-on">$</span><input type="text" id="txtSpecial" class="span12 number">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                    <br />
                    <div class="form-actions" style="padding-left: 32%;">
                        <input type="button" class="btn btn-primary" value="Save" id="btnSave" style="width:85px;" />
                        <input type="button" class="btn btn-info" value="Refresh" id="btnRefresh" style="width:85px;" />
                        <input type="button" class="btn btn-danger" value="Cancel" id="btnCancel" style="width:85px;" />
                        <input type="button" class="btn btn-inverse" id="btnExportToExcel" value="Export To Excel" />
                        <input type="button" class="btn btn-success" id="btnImport" value="Import File" />
                    </div>
                    @*@Html.Partial("_layoutPageButton")*@
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i>Price List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
    <!-- The Modal Add POD-->
    <div id="SellPriceModal" class="modal" data-backdrop="false">

        <!-- Modal content -->
        @Html.Partial("../SellingPriceSetup/_SellPriceModal")
    </div>

</div>
