
@{
    ViewBag.Title = "ItemCheckIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#mainInventory").addClass("active open");
        $("#childItemCheckIn").addClass("active");
        $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");

    });

</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-bag"></i> <a href="@Url.Action("Index", "Inventory")">Inventory</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Item CheckIn
            @*<a href="@Url.Action("ItemCheckIn", "ItemCheckIn")">Item CheckIn</a>*@
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i> Item CheckIn</span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group" style="background-color:#94dbff33;">
                            <div class="span6">
                                <label class="control-label">Customer Name <span class="required">*</span></label>
                                <div class="controls">
                                    <select id="ddlCustomer" class="required span12 select2-select-00"></select>
                                </div>
                            </div>
                            <div class="span6">
                                <label class="control-label">Customer Address </label>
                                <div class="controls">
                                    <input type="text" id="txtCustomerInfo" class="span12" readonly="readonly" />
                                </div>
                            </div>
                        </div>

                        <div id="divTable" class="widget-content table-container" style="min-height:150px; overflow:auto; ">
                            <table class="table table-bordered" id="tbl">
                                <thead style="background-color: #ebebeb">
                                    <tr>
                                        <th width="5%">SL#</th>
                                        <th width="20%">Item Code</th>
                                        <th width="30%">Description</th>
                                        <th width="20%">Location</th>
                                        <th width="10%">CheckOut Qty </th>
                                        <th width="10%">CheckIn Qty </th>
                                    </tr>
                                </thead>
                                <tbody id="idtbody"></tbody>
                            </table>
                        </div>
                       
                    </fieldset>
                    <br />
                    <div class="form-actions">
                        <div class="span2"></div>
                        <div class="span10">
                            <input type="button" class="btn btn-success" id="btnSave" value="Check In" style="width:90px;" />
                            <input type="button" class="btn btn-info" value="Refresh" id="btnRefresh" />
                            <input type="button" class="btn btn-danger" value="Cancel" id="btnCancel" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Inventory/ItemCheckIn.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}




