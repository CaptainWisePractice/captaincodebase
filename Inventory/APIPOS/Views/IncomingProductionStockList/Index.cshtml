
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
          /**    Tabs     **/
          .tabs {
              display: flex;
              width: 100%;
              flex-wrap: wrap;
          }

              .tabs label {
                  order: 1;
                  padding: 1rem 2rem;
                  margin-right: 0.2rem;
                  cursor: pointer;
                  background: #9690f9;
                  font-weight: bold;
                  transition: background ease 0.2s;
              }

              .tabs .tab {
                  order: 99;
                  width: 100%;
                  display: none;
                  padding: 1rem;
                  background: #fff;
              }

              .tabs input[type="radio"] {
                  display: none;
              }

              .tabs input[type="radio"]:checked + label {
                 background: #efeeee;
              }

             .tabs input[type="radio"]:checked + label + .tab {
              display: block;
           }

          .Tabmargin {
              margin-left: -13px;
              margin-top: -13px;
          }

