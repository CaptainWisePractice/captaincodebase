<script type="text/javascript">
    $(document).ready(function () {
        $("#mainPurchase").addClass("active open");
        $("#childIndex").addClass("active");
        $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");
    });
</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-shopping-cart"></i><a href="@Url.Action("Index", "Purchase")">Purchase</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Incoming and Production Stock List
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i> Incoming and Production Stock List </span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="span12">
                            <div class="control-group">
                                <div class="span3">
                                    <label class="control-label">From Date</label>
                                    <div class="controls">
                                        <input type="text" id="txtFromDate" class="required span12 ftDate" />
                                    </div>
                                </div>
                                <div class="span3">
                                    <label class="control-label">To Date</label>
                                    <div class="controls">
                                        <input type="text" id="txtToDate" class="required span12 ftDate" />
                                    </div>
                                </div>
                                <div class="span2">
                                    <label class="control-label"><input type="button" class="btn btn-info" value="Search" id="btnSearch" /></label>
                                    <div class="controls">
                                    </div>
                                </div>
                                <div class="span4">
                                    <a href="javascript:" class="btn_style1 excel" onclick="doExcel()"><span style="font-size:larger;font-weight:bold">Download Excel</span></a>
                                </div>
                            </div>
                        </div>
                        <div class="span12" style="margin-left: 0px;">
                            <div class="control-group">
                                <div class="controls" style="margin-left: 0px">
                                    <div class="tabs">
                                        <input type="radio" name="tabs" id="Incoming" checked="checked">
                                        <label for="Incoming">INCOMING ORDERS</label>
                                        <div class="tab">
                                            <div id="IncomingTable" class="Tabmargin">
                                            </div>
                                        </div>
                                        <input type="radio" name="tabs" id="Production">
                                        <label for="Production">PRODUCTION ORDERS</label>
                                        <div class="tab">
                                            <div id="ProductionTable" class="Tabmargin">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <br />
                </form>
            </div>
        </div>
    </div>

</div>
