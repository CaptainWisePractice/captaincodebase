
@{
    ViewBag.Title = "CustomerPrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        $("#mainHome").addClass("active open");
        $("#childCustomerPrice").addClass("active");
       // $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");
    });
</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-accessibility"></i><a href="@Url.Action("Index", "Admin")">Admin</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Customer Price Add
            @*<a href="@Url.Action("Index", "Admin")">Add User</a>*@
        </li>
    </ul>
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i>Customer Price Add </span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span2">
                                <input type="hidden" id="hfId" value="0" />
                            </div>
                            <div class="span7">
                                <label class="control-label" for="ddlHead">Customer Name <span class="required">★</span></label>
                                <div class="controls">
                                    <select id="ddlCustomer" class="span12 select2"></select>
                                </div>
                            </div>
                            <div class="span3"></div>
                        </div>

                        <div class="control-group">
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkSale1" value="option1" class="uniform">
                                        Offer 1(Ex)
                                    </label>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkSale2" value="option1" class="uniform">
                                        Offer 2(Ex)
                                    </label>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkSale3" value="option1" class="uniform">
                                        Offer 3(Inc)
                                    </label>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkRetail" value="option1" class="uniform">
                                        Retail(Inc)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkWholeSale" value="option1" class="uniform">
                                        Whole Sale(Ex)
                                    </label>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <label class="checkbox">
                                        <input type="checkbox" id="chkSpecial" value="option1" class="uniform">
                                        Special(Inc)
                                    </label>
                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label">From Date</label>
                                <div class="controls">
                                    <input type="text" id="txtFrom" class="required span12" />

                                </div>
                            </div>
                            <div class="span3">
                                <label class="control-label">To Date</label>
                                <div class="controls">
                                    <input type="text" id="txtTo" class="required span12" />
                                </div>
                            </div>
                        </div>

                    </fieldset>
                    <br />
                    @Html.Partial("_layoutPageButton")
                </form>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    <i class="icol-table"></i> Customer Price List
                </span>
            </div>
            <div id="divTable" class="widget-content table-container">
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var base = '@Url.Content("~/")';
        $.getScript('@Url.Content("~/App_Js/Admin/CustomerPrice.js")',
            function (data, textStatus, jqxhr) {
                console.log('Script File Load Status=' + jqxhr.status);
            });
    </script>
}




