
@{
    ViewBag.Title = "StockIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#mainInventory").addClass("active open");
        $("#childStockIn").addClass("active");
        $("#mainHome").removeClass("active open");
        $("#childIndex").removeClass("active");
    });

</script>

<div id="main-header" class="page-header">
    <ul class="breadcrumb">
        <li>
            <i class="icon-bag"></i> <a href="@Url.Action("Index", "Inventory")">Inventory</a>
            <span class="divider">&raquo;</span>
        </li>
        <li>
            Stock In
            @*<a href="@Url.Action("StockIn", "StockIn")">Stock In</a>*@
        </li>
    </ul>
    @*<h1 id="main-heading">
            Stock In <span>This page shows the Stock In  </span>
        </h1>*@
</div>
<div class="page-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title"><i class="icon-tag"></i> Stock In </span>
            </div>
            <div class="widget-content form-container">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <div class="span6">
                                <label class="control-label" for="ddlItemHead">Item Code <span class="required">*</span></label>
                                <div class="controls">
                                    <select id="ddlItemHead" class="span10"></select>
                                </div>
                            </div>
                            <div class="span6">
                                <div class="span4">
                                    <label class="control-label" style="width:55px;">Initial Price </label>
                                    <div class="controls" style="margin-left:70px;">
                                        <input type="text" class="span10" id="txtOldPrice" readonly />
                                    </div>
                                </div>
                                <div class="span4">
                                    <label class="control-label" style="width:60px;">New Price </label>
                                    <div class="controls" style="margin-left:70px;">
                                        <input type="text" class="span10 numeric" id="txtNewPrice" />
                                    </div>
                                </div>
                                <div class="span4">
                                    <label class="control-label" style="width:60px;">Avg. Price </label>
                                    <div class="controls" style="margin-left:70px;">
                                        <input type="text" class="span10" id="txtAvgPrice" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="divTable" class="widget-content table-container" style="overflow:inherit !important;">
                            <table class="table table-striped table-checkable" id="tbl">
                                <thead style="background-color: #ebebeb">
                                    <tr>
                                        <th class="checkbox-column">
                                            <input type="checkbox" class="uniform">
                                        </th>
                                        <th width="12%">Item Number</th>
                                        <th width="20%">Item Name</th>
                                        <th width="8%">In Hand Qty.</th>
                                        <th width="10%">Qty.</th>
                                        <th width="20%">Location</th>
                                        <th width="20%">Supplier</th>
                                        <th width="10%">Lot No.</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="txtNotes">Notes </label>
                            <div class="controls">
                                <textarea id="txtNotes" class="span10 autosize" style="overflow: hidden; word-wrap: break-word; resize: both; height: 50px;"></textarea>
                            </div>
                        </div>

                    </fieldset>
                    <br />
                    @Html.Partial("_layoutPageButton")
                </form>
            </div>
        </div>
    </div>
    @*<div class="row-fluid">
            <div class="span12 widget">
                <div class="widget-header">
                    <span class="title">
                        <i class="icol-table"></i>List
                    </span>
                </div>
                <div id="divTable" class="widget-content table-container">
                </div>
            </div>
        </div>*@
</div>
